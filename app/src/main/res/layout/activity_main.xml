<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txtStudent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="72dp"
        android:layout_marginBottom="8dp"
        android:text="Student:"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/btnStudentLoggInn"
        app:layout_constraintHorizontal_bias="0.204"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.872" />

    <TextView
        android:id="@+id/txtForeleser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:text="Foreleser:"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/btnForeleserLoggInn"
        app:layout_constraintEnd_toEndOf="@+id/btnStudentLoggInn"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/btnStudentLoggInn" />

    <Button
        android:id="@+id/btnStudentLoggInn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="76dp"
        android:text="Logg inn"
        app:layout_constraintBottom_toTopOf="@+id/txtForeleser"
        app:layout_constraintEnd_toEndOf="@+id/txtStudent"
        app:layout_constraintEnd_toStartOf="@+id/btnStudentRegistrer"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/txtStudent" />

    <Button
        android:id="@+id/btnStudentRegistrer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="52dp"
        android:layout_marginBottom="8dp"
        android:text="Registrer ny"
        app:layout_constraintBottom_toBottomOf="@+id/btnStudentLoggInn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btnStudentLoggInn"
        app:layout_constraintVertical_bias="0.474" />

    <Button
        android:id="@+id/btnForeleserLoggInn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Logg inn"
        app:layout_constraintBottom_toBottomOf="@+id/btnForeleserRegistrer"
        app:layout_constraintEnd_toEndOf="@+id/txtForeleser"
        app:layout_constraintEnd_toStartOf="@+id/btnForeleserRegistrer"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/txtForeleser"
        app:layout_constraintTop_toTopOf="@+id/btnForeleserRegistrer"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/btnForeleserRegistrer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="48dp"
        android:layout_marginBottom="160dp"
        android:text="Registrer ny"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</android.support.constraint.ConstraintLayout>